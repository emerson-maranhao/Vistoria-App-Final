<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textviewFilterName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr"
        android:padding="16dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Not started" />

    <CheckBox
        android:id="@+id/filterNameElectric"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:textDirection="rtl"
        android:layoutDirection="rtl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/filterNameExternal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:textDirection="rtl"
        android:layoutDirection="rtl"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/filterNameElectric"
        app:layout_constraintTop_toTopOf="@id/filterNameElectric" />

    <CheckBox
        android:id="@+id/filterNameInternal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:textDirection="rtl"
        android:layoutDirection="rtl"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/filterNameElectric"
        app:layout_constraintTop_toTopOf="@id/filterNameElectric" />

    <CheckBox
        android:id="@+id/filterNameMandatory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:textDirection="rtl"
        android:layoutDirection="rtl"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/filterNameElectric"
        app:layout_constraintTop_toTopOf="@id/filterNameElectric" />


</androidx.constraintlayout.widget.ConstraintLayout>